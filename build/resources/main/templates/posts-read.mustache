{{>layout/header}}

<h1 class="post-read-header">어서오세요 대나무 숲에</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <input type="hidden" class="form-control" id="id" value="{{post.id}}">
            <!--            </div>-->
            <div class="form-group">
                <label for="title">제목</label>
                <input type="text" class="form-control" id="title" value="{{post.title}}" readonly>
            </div>
            <div class="form-group">
                <label for="author">작성자</label>
                <input type="text" class="form-control" id="author" value="{{post.author}}" readonly></input>
            </div>
            <div class="form-group">
                <label for="content">내용</label>
                <textarea class="form-control" id="content" readonly>{{post.content}}</textarea>
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">목록으로</a>
        {{#writerName}}
        <a href="/posts/update/{{post.id}}" type="button" class="btn btn-primary">수정하기</a>
        <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
        {{/writerName}}
        {{#isAdmin}}
          <button type="button" class="btn btn-danger" id="btn-delete">삭제</button>
        {{/isAdmin}}
    </div>

</div>

{{>layout/footer}}